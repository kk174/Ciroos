# ============================================
# main.tf - Main Infrastructure Resources
# ============================================
# This is where we define WHAT to create
# We use pre-built modules to save hundreds of lines of code
#
# ANALOGY: Instead of building a car from scratch,
#          we use pre-assembled components (engine, wheels)

# Get current AWS account info (useful for IAM policies)
data "aws_caller_identity" "current" {}

# Get available AZs in the region
data "aws_availability_zones" "available" {
  state = "available"
}

# ============================================
# 1. VPC (Virtual Private Cloud) - THE NETWORK
# ============================================
# This creates our private network in AWS
# Think of it as your own isolated section of the cloud

module "vpc" {
  source  = "terraform-aws-modules/vpc/aws"
  version = "~> 5.0"

  name = "${var.project_name}-vpc"
  cidr = var.vpc_cidr

  # Use 2 availability zones for high availability
  azs = var.availability_zones

  # Subnet CIDR blocks - dividing our network
  # /20 = 4,096 IPs per subnet (plenty for our demo)
  private_subnets  = ["10.0.1.0/24", "10.0.2.0/24"]      # Apps live here
  public_subnets   = ["10.0.101.0/24", "10.0.102.0/24"]  # Load balancer here
  database_subnets = ["10.0.201.0/24", "10.0.202.0/24"]  # Database here

  # NAT Gateway - lets private subnets reach the internet
  # (for downloading packages, calling external APIs)
  enable_nat_gateway     = true
  single_nat_gateway     = true  # One NAT to save money (use false for prod)
  enable_dns_hostnames   = true
  enable_dns_support     = true

  # Create a database subnet group (needed for RDS)
  create_database_subnet_group = true

  # Tags required for EKS to find the subnets
  public_subnet_tags = {
    "kubernetes.io/role/elb"                    = 1
    "kubernetes.io/cluster/${var.cluster_name}" = "owned"
  }

  private_subnet_tags = {
    "kubernetes.io/role/internal-elb"           = 1
    "kubernetes.io/cluster/${var.cluster_name}" = "owned"
  }

  tags = {
    Name = "${var.project_name}-vpc"
  }
}

# ============================================
# 2. EKS CLUSTER - KUBERNETES
# ============================================
# This creates our Kubernetes cluster
# AWS manages the control plane, we manage the worker nodes

module "eks" {
  source  = "terraform-aws-modules/eks/aws"
  version = "~> 19.0"

  cluster_name    = var.cluster_name
  cluster_version = var.cluster_version

  # Where to create the cluster
  vpc_id     = module.vpc.vpc_id
  subnet_ids = module.vpc.private_subnets

  # Allow access to Kubernetes API from anywhere
  # (In production, you'd restrict this!)
  cluster_endpoint_public_access = true

  # Enable IRSA (IAM Roles for Service Accounts)
  # This lets pods have AWS permissions securely
  enable_irsa = true

  # EKS Managed Node Group - the worker nodes
  eks_managed_node_groups = {
    # Node group named "default"
    default = {
      name           = "${var.project_name}-nodes"
      instance_types = [var.node_instance_type]

      min_size     = var.node_min_count
      max_size     = var.node_max_count
      desired_size = var.node_desired_count

      # Disk size for each node
      disk_size = 50

      # Labels help with pod scheduling
      labels = {
        Environment = var.environment
        NodeGroup   = "default"
      }

      # Taints can prevent certain pods from scheduling here
      # (We won't use taints in this demo)
    }
  }

  # Allow your IAM user to access the cluster
  # This is needed so you can run kubectl commands
  manage_aws_auth_configmap = true

  tags = {
    Name = var.cluster_name
  }
}

# ============================================
# 3. RDS POSTGRESQL - THE DATABASE
# ============================================
# This creates our PostgreSQL database
# Multi-AZ optional (we'll skip for demo to save money)

# Security group for RDS - controls who can connect
resource "aws_security_group" "rds" {
  name        = "${var.project_name}-rds-sg"
  description = "Security group for RDS PostgreSQL"
  vpc_id      = module.vpc.vpc_id

  # Allow PostgreSQL connections from EKS nodes
  ingress {
    from_port       = 5432
    to_port         = 5432
    protocol        = "tcp"
    security_groups = [module.eks.node_security_group_id]
    description     = "PostgreSQL from EKS nodes"
  }

  # Allow all outbound traffic
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.project_name}-rds-sg"
  }
}

module "rds" {
  source  = "terraform-aws-modules/rds/aws"
  version = "~> 6.0"

  identifier = "${var.project_name}-db"

  # Database engine
  engine               = "postgres"
  engine_version       = "15"
  family               = "postgres15"
  major_engine_version = "15"
  instance_class       = var.db_instance_class

  # Storage
  allocated_storage     = var.db_allocated_storage
  max_allocated_storage = 100  # Enable storage autoscaling up to 100GB

  # Database settings
  db_name  = var.db_name
  username = var.db_username
  password = var.db_password
  port     = 5432

  # Network settings
  db_subnet_group_name   = module.vpc.database_subnet_group_name
  vpc_security_group_ids = [aws_security_group.rds.id]

  # Maintenance settings
  maintenance_window      = "Mon:00:00-Mon:03:00"
  backup_window           = "03:00-06:00"
  backup_retention_period = 7

  # Skip final snapshot for demo (don't do this in prod!)
  skip_final_snapshot = true
  deletion_protection = false

  # Performance Insights (monitoring)
  performance_insights_enabled = true

  tags = {
    Name = "${var.project_name}-db"
  }
}

# ============================================
# 4. ELASTICACHE REDIS - THE CACHE
# ============================================
# Redis for session storage and caching

# Security group for ElastiCache
resource "aws_security_group" "redis" {
  name        = "${var.project_name}-redis-sg"
  description = "Security group for ElastiCache Redis"
  vpc_id      = module.vpc.vpc_id

  ingress {
    from_port       = 6379
    to_port         = 6379
    protocol        = "tcp"
    security_groups = [module.eks.node_security_group_id]
    description     = "Redis from EKS nodes"
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.project_name}-redis-sg"
  }
}

# Subnet group for ElastiCache
resource "aws_elasticache_subnet_group" "redis" {
  name       = "${var.project_name}-redis-subnet"
  subnet_ids = module.vpc.private_subnets

  tags = {
    Name = "${var.project_name}-redis-subnet"
  }
}

# ElastiCache Redis cluster
resource "aws_elasticache_cluster" "redis" {
  cluster_id           = "${var.project_name}-redis"
  engine               = "redis"
  node_type            = var.redis_node_type
  num_cache_nodes      = 1  # Single node for demo
  parameter_group_name = "default.redis7"
  engine_version       = "7.0"
  port                 = 6379

  subnet_group_name  = aws_elasticache_subnet_group.redis.name
  security_group_ids = [aws_security_group.redis.id]

  tags = {
    Name = "${var.project_name}-redis"
  }
}

# ============================================
# 5. S3 BUCKET - LOG STORAGE
# ============================================
# For storing logs from Splunk, ALB access logs, etc.

resource "aws_s3_bucket" "logs" {
  bucket = "${var.project_name}-logs-${data.aws_caller_identity.current.account_id}"

  tags = {
    Name = "${var.project_name}-logs"
  }
}

# Enable versioning (keep old versions of files)
resource "aws_s3_bucket_versioning" "logs" {
  bucket = aws_s3_bucket.logs.id
  versioning_configuration {
    status = "Enabled"
  }
}

# Encryption at rest
resource "aws_s3_bucket_server_side_encryption_configuration" "logs" {
  bucket = aws_s3_bucket.logs.id

  rule {
    apply_server_side_encryption_by_default {
      sse_algorithm = "AES256"
    }
  }
}

# Block public access (security best practice)
resource "aws_s3_bucket_public_access_block" "logs" {
  bucket = aws_s3_bucket.logs.id

  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}

# ============================================
# WHAT YOU LEARNED:
# ============================================
# - "module" blocks use pre-built Terraform modules (like libraries)
# - "resource" blocks create individual AWS resources
# - "data" blocks read existing resources or AWS info
# - Security groups control network access (like firewalls)
# - We reference other resources: module.vpc.vpc_id
# - ${var.xxx} and ${module.xxx} are string interpolation
